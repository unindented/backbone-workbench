{
  "name":        "backbone-workbench",
  "description": "Backbone workbench.",

  "version":     "0.0.4",
  "main":        "dist/backbone-workbench.js",

  "repository": {
    "type": "git",
    "url":  "git@github.com:unindented/backbone-workbench.git"
  },

  "engines": {
    "node": ">=0.10.0"
  },

  "scripts": {
    "test":  "./node_modules/.bin/karma start --single-run",
    "watch": "./node_modules/.bin/karma start",

    "build": "./node_modules/.bin/webpack --colors --progress --profile",
    "optim": "./node_modules/.bin/webpack --colors --progress --profile -p",

    "start": "./node_modules/.bin/webpack-dev-server --colors --progress --profile --hot --inline --port 9874 --config webpack.live.js"
  },

  "dependencies": {
    "jquery":            "*",
    "underscore":        "^1.8",
    "underscore.string": "^2.4",
    "backbone":          "^1.1"
  },

  "devDependencies": {
    "webpack":                      "~1.6.0",

    "karma":                        "~0.12.31",
    "karma-cli":                    "~0.0.4",
    "karma-webpack":                "~1.5.0",
    "karma-jasmine":                "~0.3.5",
    "karma-coverage":               "~0.2.7",

    "karma-phantomjs-launcher":     "~0.1.4",
    "karma-chrome-launcher":        "~0.1.7",
    "karma-firefox-launcher":       "~0.1.4",
    "karma-opera-launcher":         "~0.1.0",
    "karma-safari-launcher":        "~0.1.1",
    "karma-ie-launcher":            "~0.1.5",

    "jshint-loader":                "~0.8.3",
    "jscs-loader":                  "~0.0.5",

    "ejs-compiled-loader":          "~0.1.0",

    "style-loader":                 "=0.8.1",
    "css-loader":                   "~0.9.1",
    "autoprefixer-loader":          "~1.1.0",
    "rework-loader":                "~0.1.1",
    "rework-vars":                  "~3.1.1",
    "rework-calc":                  "~1.1.0",
    "rework-clearfix":              "~1.0.0",
    "rework-color-function":        "~1.2.0",

    "wrap-loader":                  "~0.0.2",
    "istanbul-instrumenter-loader": "~0.1.2",

    "jasmine-jquery-matchers":      "~0.0.1"
  }
}
